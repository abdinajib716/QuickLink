{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": ".next",
  "rewrites": [
    { "source": "/api/websocket", "destination": "/app/api/websocket" }
  ],
  "functions": {
    "app/api/websocket/**/*": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "env": {
    "NEXT_PUBLIC_WEBSOCKET_URL": "wss://quick-link.vercel.app/api/websocket"
  },
  "crons": [
    {
      "path": "/api/cleanup",
      "schedule": "0 0 * * *"
    }
  ]
} 